<p id="notice"><%= notice %></p>

<div class="panel panel-info">
	<div class="panel-heading">
  		<strong>Description:</strong>
	</div>
  	<div class="panel-body">
  		<%= @pin.description %>
	</div>
	<div class="panel-footer">
