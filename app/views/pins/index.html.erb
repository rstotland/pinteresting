<h2>Pins</h2>

<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th>User</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= image_tag pin.image.url(:thumb) %>
        <td><%= pin.description %></td>
        <td><%= pin.user.email if pin.user %><br/>
            <% if current_user.admin? && pin.user != current_user %>
              <span class="aaccess">Admin Access</span>
            <% end %>
        </td>
        <td><%= link_to 'Show', pin, class: "btn btn-default" %></td>
        <% if pin.user == current_user || current_user.admin? %>
          <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-default" %></td>
          <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Pin', new_pin_path, class: "btn btn-primary" %>
<% end %>
